{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Cors": {
    "AllowedOrigins": [
      "http:localhost:4200", // Angular
      "http:localhost:3000", // React
      "http://127.0.0.1:5500" // LiveServer
    ]
  },

  "ConnectionStrings": {
    "Default": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=TodoListDb;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },

  // Attention, ne JAMAIS stocker des informations sensibles dans ce fichier en développement/production !
  "JwtSettings": {
    "SecretKey": "VotreClefSecreteTrèsLongueEtComplexeDeMinimum32Caractères!", // La clef secrète pour signer le token
    "Issuer": "TodoListAPI", // Le nom de qui émet le token
    "Audience": "TodoListClient", // Le nom de qui va utiliser le token
    "ExpirationMinutes": 30 // La durée de validité du token en minutes
  }
}
